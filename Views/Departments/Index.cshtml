@model IEnumerable<HumanResources.Models.Department>

@{
    ViewData["Title"] = "Отделы";
}

<h1>Отделы</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentID">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
